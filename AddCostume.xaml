<Window x:Class="PrestonMarathonApp.AddCostume"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PrestonMarathonApp"
        mc:Ignorable="d"
        Title="AddCostume" Height="740" Width="850"  Left="540" Top="50" WindowStartupLocation="Manual">
    <Grid>
        <StackPanel Height="200" Width="350" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold" FontSize="20">Add Costume Details</TextBlock>
            <Label>Costume Colour</Label>
            <TextBox  Name="costumeDetails" Margin="0 5 15 5 " Height="25" FontSize="18" ></TextBox>
            <Button  Margin="0 5 0 0" Background="#F6E063" Name="AddCostumeDetails" Click="AddCostumeDetails_Click" Height="25" Width="249" >Add Costume</Button>
            <TextBox  Name="participantId" Visibility="Hidden"></TextBox>
        </StackPanel>
    </Grid>
</Window>
